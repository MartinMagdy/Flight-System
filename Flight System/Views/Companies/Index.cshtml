@model IEnumerable<Flight_System.Models.Companies>

@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole(role: "Admin"))
{
    <h2>Add Company</h2>
}


<p>
    <a href="~/Companies/Create" class="btn btn-danger">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plans)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plans.Count)
            </td>
            <td>
                @if (User.IsInRole(role: "Admin"))
                {
                    <a href="~/Companies/Edit/@Html.DisplayFor(Model=>item.companynumber)" class="btn btn-danger">Edit</a>
                }
                @if (User.IsInRole(role: "Admin"))
                {
                    <a href="~/Companies/Delete/@Html.DisplayFor(Model=>item.companynumber)" class="btn btn-danger">Delete</a>
                }
                    <a href="~/Companies/Details/@Html.DisplayFor(Model=>item.companynumber)" class="btn btn-danger">Details</a>


            </td>
        </tr>
    }

</table>
